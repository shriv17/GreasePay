<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ladse.greasepay.fragments.EditProfile">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:id="@+id/fragment_edit_profile_image_back"
       android:background="@color/colorButton"
       >
       <ImageButton
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/fragment_edit_button_edit_pic"
           android:src="@mipmap/ic_icon_edit_profile"
           android:layout_centerInParent="true"
           />

   </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_edit_profile_image_back"
        android:paddingLeft="@dimen/activity_padding_15"
        android:paddingRight="@dimen/activity_padding_15"
        android:paddingTop="@dimen/activity_padding_15"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_gravity="center"

            >
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_edit_profile_edit_firstName"
                android:layout_weight="2"
                android:background="@drawable/promo_bg"
                android:padding="@dimen/activity_padding_5"
                />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_edit_profile_edit_lastName"
                android:layout_weight="2"
                android:background="@drawable/promo_bg"
                android:padding="@dimen/activity_padding_5"
                />
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_edit_profile_edit_email"
            android:background="@drawable/promo_bg"
            android:layout_marginTop="@dimen/activity_padding_10"
            android:padding="@dimen/activity_padding_5"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_edit_profile_edit_number"
            android:background="@drawable/promo_bg"
            android:layout_marginTop="@dimen/activity_padding_10"
            android:padding="@dimen/activity_padding_5"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded"
            android:layout_marginTop="@dimen/activity_padding_10"
            android:text="Save"
            android:textSize="20sp"
            android:textColor="@color/colorButtonText"
            />
    </LinearLayout>

</RelativeLayout>
